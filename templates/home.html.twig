{% extends 'base.html.twig' %}

{% block title %}Feet≈ç{% endblock %}

{% block body %}
<div class="flex flex-col items-center">
    <h1 class="mb-[160px] px-container">{{ 'Baseline'|trans }}.</h1>
    <div class="relative w-full flex flex-col items-center">
        <div class="w-full h-[90vh] bg-green absolute top-[55px] left-0 -z-[1]"></div>
        <h3 class="mb-[80px]">
            {% if app.user %}
                {{ 'Hello'|trans }} {{ app.user.getFirstName() }}, {{ 'Check_new'|trans }}.
            {% else %}
                {{ 'Join'|trans }}, <a class="underline" href="{{ path('app_register') }}">{{ 'Click'|trans }}</a>.
            {% endif %}
            
        </h3>
        <div class="grid grid-cols-3 w-full px-container gap-[20px] mb-170">
            {% for plant in plants|slice(0, 5) %}
                <a href="{{ path('app_plant_show', {'id': plant.id}) }}">{% include "plant/card.html.twig" %}</a>
            {% endfor %}
        </div>
        {% include "partials/cta.html.twig" %}
    </div>   
</div>
{% endblock %}
