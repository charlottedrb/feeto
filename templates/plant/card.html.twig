<div class="h-[450px] bg-dark-green rounded-lg block relative p-[35px]">
	<div class="absolute top-0 left-0 bg-white h-[80%] w-full rounded-lg rounded-b-[100px]"></div>
	<div class="relative">
		<h4>{{ plant.name }}</h4>
		<div class="mt-4">
			{% for category in plant.categories %}
				<h5 class="block -mt-3">{{ category }}
				</h5>
			{% endfor %}
		</div>
	</div>
	<div class="w-[65%] absolute bottom-[20px] right-[-80px] z-10 pointer-events-none">
		<img class="w-full object-cover" src="{{ asset('images/' ~ plant.imageUrl) }}" alt="{{ plant.name }}">
	</div>
</div>
