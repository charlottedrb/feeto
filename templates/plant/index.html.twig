{% extends 'base.html.twig' %}

{% block title %}Plant index{% endblock %}

{% block body %}
    <h1>Plant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Size</th>
                <th>Price</th>
                <th>Origin</th>
                <th>Complexity</th>
                <th>Description</th>
                <th>Image_url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plant in plants %}
            <tr>
                <td>{{ plant.id }}</td>
                <td>{{ plant.name }}</td>
                <td>{{ plant.size }}</td>
                <td>{{ plant.price }}</td>
                <td>{{ plant.origin }}</td>
                <td>{{ plant.complexity }}</td>
                <td>{{ plant.description }}</td>
                <td>{{ plant.imageUrl }}</td>
                <td>
                    <a href="{{ path('app_plant_show', {'id': plant.id}) }}">show</a>
                    <a href="{{ path('app_plant_edit', {'id': plant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_plant_new') }}">Create new</a>
{% endblock %}
